@page
@model WebApplicationRazorPagesDemo.Pages.EmployeeModel
@{
}

<h1>@ViewData["Message"]</h1>
<form method="post">
    <label for="Id">Employee ID:</label>
    <input type="number" id="Id" asp-for="Emps.Id" />
    <br />

    <label for="Name">Employee Name:</label>
    <input type="text" id="Name" asp-for="Emps.Name" />
    <br />

    <button type="submit">Save</button>
</form>

<h2>Employee Details</h2>
<p>Id: @Model.Emps.Id</p>
<p>Name: @Model.Emps.Name</p>
